        android:layout_width="48dp"
        android:layout_height="44dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/charts_button_style"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:text="G"
        android:textAlignment="center"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/hafta_btn"
        android:layout_width="48dp"
        android:layout_height="44dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/charts_button_style"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:text="H"
        android:textAlignment="center"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/gun_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ay_btn"
        android:layout_width="48dp"
        android:layout_height="44dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/gradient_green"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:text="A"
        android:textAlignment="center"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/hafta_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/yil_btn"
        android:layout_width="48dp"
        android:layout_height="44dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/charts_button_style"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:text="Y"
        android:textAlignment="center"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/ay_btn"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/tum_btn"
        android:layout_width="48dp"
        android:layout_height="44dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/charts_button_style"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:text="T"
        android:textAlignment="center"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/yil_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="48dp"
        android:layout_height="44dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/charts_button_style"
        android:src="@drawable/calendar_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tum_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView47"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
