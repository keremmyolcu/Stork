<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    tools:context=".Activity.StorkPointsActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="411dp"
        android:layout_height="72dp">


        <ImageButton
            android:id="@+id/back_btn77"
            android:clickable="true"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="25dp"
            android:backgroundTint="#f5f5f5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back_36" />

        <TextView
            android:id="@+id/group_payments_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/black"
            android:text="Stork Puanları"
            android:textAlignment="center"
            android:textSize="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView80"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/stork" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="719dp"
        app:cardCornerRadius="24dp">


        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/stork"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_marginTop="136dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/stork_points"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center_vertical"
            android:text="Stork Puanları Nedir?"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_marginTop="172dp"
            android:layout_marginLeft="15dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:layout_width="361dp"
            android:layout_height="128dp"
            android:layout_below="@id/stork_points"
            android:text="Stork puanları , uygulamada gerçekleştirdiğin işlemler sonucunda kazandığın her ay yenilenen , çeşitli hediye ve avantajlarda kullanabileceğin puanlardır."/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Nasıl Kazanırım?"
            android:layout_marginTop="304dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_marginTop="340dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:text="Arkadaşa Transfer : 10 Stork Puan"/>

        <TextView
            android:layout_marginTop="374dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:text="Banka Transferi : 7 Stork Puan"/>

        <TextView
            android:layout_marginTop="408dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:text="Ödeme İşlemleri : 5 Stork Puan"/>
        <TextView
            android:layout_marginTop="440dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:text="Piyasa İşlemleri : 2 Stork Puan"/>

        <TextView
            android:layout_marginTop="470dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:text="Kazandırır."/>

        <TextView
            android:layout_marginTop="508dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="Bu Ay Kazandığım Stork Puan Miktarı"/>

        <TextView
            android:layout_marginTop="543dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:text="242"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/stork"
            android:layout_marginTop="543dp"
            android:layout_marginLeft="50dp"/>

        <Button
            android:layout_marginTop="593dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="16dp"
            android:background="@drawable/gradient_orange"
            android:id="@+id/hediyeler"
            android:layout_width="211dp"
            android:layout_height="48dp"
            android:text="Hediyeleri Göster" />

    </androidx.cardview.widget.CardView>


</LinearLayout>