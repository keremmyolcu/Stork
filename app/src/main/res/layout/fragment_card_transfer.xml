<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recyclerView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="28dp"
    android:background="#F5F5F5"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/hesabim_textt"
            android:layout_width="70dp"
            android:layout_height="22dp"
            android:layout_marginStart="49dp"
            android:layout_marginTop="60dp"
            android:fontFamily="sans-serif"
            android:text="HESABIM"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/hesabim_spinnerr"
            android:layout_width="316dp"
            android:layout_height="48dp"
            android:layout_marginStart="49dp"
            android:layout_marginEnd="57dp"
            android:background="@drawable/btn_round_white"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:theme="@style/SpinnerTheme"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hesabim_textt" />

        <TextView
            android:id="@+id/iban_textt"
            android:layout_width="122dp"
            android:layout_height="22dp"
            android:layout_marginStart="49dp"
            android:layout_marginTop="18dp"
            android:text="ALICI BANKA"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hesabim_spinnerr" />

        <Spinner
            android:id="@+id/bank_spin"
            android:layout_width="316dp"
            android:layout_height="48dp"
            android:layout_marginStart="49dp"
            android:background="@drawable/btn_round_white"
            android:paddingLeft="8dp"
            android:paddingTop="3dp"
            android:text="TR"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iban_textt">

        </Spinner>

        <TextView
            android:id="@+id/aliciad_textt"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginStart="49dp"
            android:layout_marginTop="18dp"
            android:text="ŞUBE KODU"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bank_spin" />

        <EditText
            android:id="@+id/branch_edit"
            android:layout_width="317dp"
            android:layout_height="48dp"
            android:layout_marginStart="49dp"
            android:layout_marginEnd="45dp"
            android:background="@drawable/btn_round_white"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aliciad_textt" />

        <TextView
            android:id="@+id/hesap_numara"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginStart="49dp"
            android:layout_marginTop="18dp"
            android:text="MÜŞTERİ NUMARASI"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/branch_edit" />


        <EditText
            android:id="@+id/hesapno_editt"
            android:layout_width="215dp"
            android:layout_height="45dp"
            android:layout_marginStart="49dp"
            android:background="@drawable/btn_round_white"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text=""
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hesap_numara" />


        <TextView
            android:id="@+id/textView63"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EK NO"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/ek_no_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.547"
            app:layout_constraintStart_toEndOf="@+id/hesap_numara"
            app:layout_constraintTop_toBottomOf="@+id/branch_edit"
            app:layout_constraintVertical_bias="0.857" />

        <EditText
            android:id="@+id/ek_no_edit"
            android:layout_width="85dp"
            android:layout_height="45dp"
            android:background="@drawable/btn_round_white"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.258"
            app:layout_constraintStart_toEndOf="@+id/hesapno_editt"
            app:layout_constraintTop_toBottomOf="@+id/hesap_numara" />

        <TextView
            android:id="@+id/aciklama_textt"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginStart="49dp"
            android:layout_marginTop="18dp"
            android:text="ALICI ADI SOYADI"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hesapno_editt" />

        <EditText
            android:id="@+id/name_edit"
            android:layout_width="317dp"
            android:layout_height="48dp"
            android:layout_marginStart="49dp"
            android:background="@drawable/btn_round_white"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text=""
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aciklama_textt" />

        <TextView
            android:id="@+id/gonderilecek_textt"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginStart="49dp"
            android:layout_marginTop="18dp"
            android:text="GÖNDERİLECEK MİKTAR"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_edit" />

        <EditText
            android:id="@+id/gonderilecek_editt"
            android:layout_width="241dp"
            android:layout_height="48dp"
            android:layout_marginStart="49dp"
            android:background="@drawable/btn_round_white"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text=""
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gonderilecek_textt" />


        <TextView
            android:id="@+id/tum_bak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:text="@string/t_m_bakiye"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.611"
            app:layout_constraintStart_toEndOf="@+id/gonderilecek_textt"
            app:layout_constraintTop_toBottomOf="@+id/name_edit" />

        <TextView
            android:id="@+id/birim"
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:background="@drawable/btn_round_white"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="22sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/gonderilecek_editt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.21"
            app:layout_constraintStart_toEndOf="@+id/gonderilecek_editt"
            app:layout_constraintTop_toBottomOf="@+id/gonderilecek_textt"
            app:layout_constraintVertical_bias="0.0" />
        <TextView
            android:id="@+id/aciklama_text"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="18dp"
            android:text="AÇIKLAMA"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gonderilecek_editt" />

        <EditText
            android:id="@+id/aciklama_edit"
            android:layout_width="241dp"
            android:layout_height="60dp"
            android:background="@drawable/btn_round_white"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.282"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aciklama_text" />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="193dp"
            android:layout_height="51dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/gradient_orange"
            android:paddingLeft="70dp"
            android:paddingTop="15dp"
            android:text="GÖNDER"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aciklama_edit"
            app:layout_constraintVertical_bias="1.0">

        </Button>
        <RelativeLayout
            android:id="@+id/loadingPanel"
            android:visibility="gone"
            style="@style/GenericProgressBackground"
            android:layout_width="match_parent"
            android:layout_height="822dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="800dp"
                android:layout_height="600dp"
                android:layout_centerVertical="true"
                android:paddingBottom="211dp"
                app:lottie_rawRes="@raw/send_loading"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
